  <script>
    function copyPix() {
      const pixKey = document.getElementById("pixKey").innerText;
      navigator.clipboard.writeText(pixKey)
        .then(() => alert("Chave Pix copiada: " + pixKey))
        .catch(() => alert("Erro ao copiar a chave Pix."));
    }
  </script>

